
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/simple-sidebar.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                       <p id="notice"><%= notice %></p>
                        <h1> <%= @group.name %></h1>
                        <!-- form_tag add_group_member_path(:id => @group.id), method: :put do -->
                        <!-- SEARCH FOR USERS TO INVITE -->
                        <%= form_tag @group, :method => 'get' do %>
                          <p>
                            <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
                            <%= submit_tag "Search", :name => nil %>
                          </p>
                        <% end %>
                        <!-- TABLE FOR USER SEARCH RESULTS -->
                        <table>
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th colspan="3"></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @users_search.each do |user| %>
                            <tr>
                              <td><%= user.first_name + " " + user.last_name %></td>
                              <td><%= link_to 'Invite',
                              invite_member_path(invite: {
                                user_id: user.id,
                                group_id: @group.id,
                                sender_id: current_user.id}), method: :post %></td>
                            </tr>
                            <% end %>
                          </tbody>
                        </table>
                        <%= link_to 'Edit', edit_group_path(@group) %> |
                        <%= link_to 'Back', groups_path %> |
                        <table>
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th>Admin</th>
                              <th colspan="3"></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @group.users.each do |user| %>
                              <% @membership = Membership.search(user.id, @group.id).first %>
                              <% next if @membership.active == false %>
                              <tr>
                                <td><%= user.first_name + " " + user.last_name %></td>
                                <td><%= @membership .admin %></td>
                                <td><%= link_to 'View Profile', user_url(user.id) %></td>
                                <% if Membership.search(current_user.id, params[:id]).first != nil %>
                                <td><%= link_to 'Banish', remove_group_member_path(@group, :user_id => user.id, :group_id => @group.id), data: { confirm: 'Are you sure?' } %></td>
                                <% end %>
                              </tr>
                            <% end %>
                          </tbody>
                        </table> <br> <br>
                        <p>Listing Chores</p>
                        <p>To do</p>
                        <table>
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th>Date</th>
                              <th>Person Responsible</th>
                              <th colspan="3"></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @group.chores.sort {|a,b| a.date <=> b.date }.each do |chore| %>
                              <% next if chore.complete == true %>
                              <% if User.exists?(chore.user_id) %>
                                <% @name = User.find(chore.user_id).first_name %>
                              <% else %>
                                <% @name = 'None' %>
                              <% end %>
                              <tr>
                                <td><%= chore.name %></td>
                                <td><%= chore.date %></td>
                                <td><%= @name %></td>
                                <% if Membership.search(current_user.id, params[:id]).first != nil && Membership.search(current_user.id, params[:id]).first.active == true%>
                                <td><%= link_to 'Show', chore_url(chore.id, from: group_url(@group.id)) %></td>
                                <td><%= link_to 'Edit', edit_chore_path(chore, from: group_url(@group.id)) %></td>
                                <td><%= link_to 'Complete', chore_complete_path(chore, from: group_url(@group.id)) %> </td>
                                <% end %>
                              </tr>
                            <% end %>
                          </tbody>
                        </table> <br>

                        <% if Membership.search(current_user.id, params[:id]).first != nil && Membership.search(current_user.id, params[:id]).first.active == true %>
                        <%= link_to 'Assign Chore', new_chore_path(group_id: @group.id) %> <br> <br>
                        <% end %>

                        <p>Completed</p>
                          <table>
                            <thead>
                              <tr>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Person Responsible</th>
                                <th colspan="3"></th>
                              </tr>
                            </thead>
                          <tbody>
                          <% @group.chores.sort {|a,b| a.date <=> b.date }.each do |chore| %>
                            <% next if chore.complete == false %>
                            <% if User.exists?(chore.user_id) %>
                              <% @name = User.find(chore.user_id).first_name %>
                            <% else %>
                              <% @name = 'None' %>
                            <% end %>
                            <tr>
                              <td><%= chore.name %></td>
                              <td><%= chore.date %></td>
                              <td><%= @name %></td>
                              <% if Membership.search(current_user.id, params[:id]).first != nil && Membership.search(current_user.id, params[:id]).first.active == true%>
                              <td><%= link_to 'Show', chore_url(chore.id, from: group_url(@group.id)) %></td>
                              <td><%= link_to 'Edit', edit_chore_path(chore, from: group_url(@group.id)) %></td>
                              <td><%= link_to 'Destroy', chore_url(chore.id, from: group_url(@group.id)), method: :delete, data: { confirm: 'Are you sure?' } %></td>

                              <% end %>
                              </tr>
                            <% end %>
                            </tbody>
                          </table>
                          <!-- TESTER -->
                          <p>ROTATION ORDER</p>
                            <table>
                              <thead>
                                <tr>
                                  <th>Chore Name</th>
                                  <th>Person Responsible</th>
                                  <th>Order</th>
                                  <th colspan="3"></th>
                                </tr>
                              </thead>
                              <tbody>
                              <% @group.chore_rotations.each do |rot| %>
                                <% @chore = Chore.find(rot.chore_id) %>
                                <% @user = User.find(rot.user_id) %>
                                <tr>
                                  <td><%= @chore.name %></td>
                                  <td><%= @user.first_name + " " + @user.last_name %></td>
                                  <td><%= rot.order %></td>
                                </tr>
                              <% end %>
                              </tbody>
                            </table>
                            <!-- END TEST -->
                        <br>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
