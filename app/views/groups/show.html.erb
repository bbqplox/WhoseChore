<%= stylesheet_link_tag 'chores' %>
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/simple-sidebar.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                       <p id="notice"><%= notice %></p>

                    <div class = "choreContent">
                        <h1 class="black"> <%= @group.name %></h1>
                        <!-- form_tag add_group_member_path(:id => @group.id), method: :put do -->
                        <!-- SEARCH FOR USERS TO INVITE -->
                        <%= form_tag @group, :method => 'get' do %>
                          <p>
                            <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
                            <%= submit_tag "Search", :name => nil %>
                          </p>
                        <% end %>
                        <!-- TABLE FOR USER SEARCH RESULTS -->
                        <table>
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th colspan="3"></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @users_search.each do |user| %>
                            <tr>
                              <td><%= user.first_name + " " + user.last_name %></td>
                              <td><%= link_to 'Invite',
                              invite_member_path(invite: {
                                user_id: user.id,
                                group_id: @group.id,
                                sender_id: current_user.id}), method: :post %></td>
                            </tr>
                            <% end %>
                          </tbody>
                        </table>
                        <%= link_to 'Edit', edit_group_path(@group), :class => "btn btn-info btn-simple btn-xs " %> |
                        <%= link_to 'Back', groups_path, :class => "btn btn-4 btn-4d icon-arrow-left color-4" %> |
                    </div><br><br>

                    <div class = "choreContent">
                        <table>
                          <thead>
                            <tr>
                              <th class="txt">Name</th>
                              <th class="txt">Admin</th>
                              <th class="txt">Active</th>
                              <th colspan="3"></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @group.users.each do |user| %>
                              <% @membership = Membership.search(user.id, @group.id).first %>
                              <% next if @membership.active == false %>
                              <tr>
                                <td class="txt2"><%= user.first_name + " " + user.last_name %></td>
                                <td class="txt2"><%= @membership.admin %></td>
                                <td class="txt2"><%= @membership.active %></td>
                                <td><%= link_to 'View Profile', user_url(user.id), :class => "btn btn-info btn-simple btn-xs" %></td>
                                <% if Membership.search(current_user.id, params[:id]).first != nil %>
                                <td><%= link_to 'Banish', remove_group_member_path(@group, :user_id => user.id, :group_id => @group.id), :class => "btn btn-danger btn-simple btn-xs", data: { confirm: 'Are you sure?' } %></td>
                                <% end %>
                              </tr>
                            <% end %>
                          </tbody>
                        </table> <br>
                    </div><br>

                    <div class = "choreContent">
                        <h5>Whose Chores To Do</h5>
                        <table>
                          <thead>
                            <tr>
                              <th class="txt">Name</th>
                              <th class="txt">Date</th>
                              <th class="txt">Person Responsible</th>
                              <th class="txt">Up Next</th>
                              <th colspan="3"></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @group.chores.sort {|a,b| a.date <=> b.date }.each do |chore| %>
                              <% next if chore.complete == true %>
                              <% if User.exists?(chore.user_id) %>
                                <% @user_name = User.find(chore.user_id).first_name %>
                              <% else %>
                                <% @user_name = 'None' %>
                              <% end %>
                              <tr>
                                <td class="txt2"><%= chore.name %></td>
                                <td class="txt2"><%= chore.date %></td>
                                <td class="txt2"><%= @user_name %></td>
                                <% @member_order = ChoreRotation.member_order(chore.id) %>
                                <% if @member_order.size > 1%>
                                  <td class="txt2"><%=  @member_order[1].first_name %></td>
                                <% else %>
                                  <td class="txt2"><%= @member_order[0].first_name %></td>
                                <% end %>
                                <% if Membership.search(current_user.id, params[:id]).first != nil && Membership.search(current_user.id, params[:id]).first.active == true%>
                                <td><%= link_to 'Show', chore_url(chore.id, from: group_url(@group.id)), :class => "btn btn-info btn-simple btn-xs" %></td>
                                <td><%= link_to 'Edit', edit_chore_path(chore, from: group_url(@group.id)), :class => "btn btn-info btn-simple btn-xs" %></td>
                                <td><%= link_to 'Complete', chore_complete_path(chore, from: group_url(@group.id)), :class => "btn complete color-4" %> </td>
                                <% end %>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                        </div><br>

                        <% if Membership.search(current_user.id, @group.id).first != nil && Membership.search(current_user.id, @group.id).first.active == true %>
                          <%= link_to 'Assign Chore', new_chore_path(group_id: @group.id), :class => "btn btn-2 btn-2d" %> <br> <br>
                        <% end %>

                    <div class = "choreContent">
                        <h5>Completed</h5>
                          <table>
                            <thead>
                              <tr>
                                <th class="txt">Name</th>
                                <th class="txt">Date</th>
                                <th class="txt">Person Responsible</th>
                                <th colspan="3"></th>
                              </tr>
                            </thead>
                          <tbody>
                          <% @group.chores.sort {|a,b| a.date <=> b.date }.each do |chore| %>
                            <% next if chore.complete == false %>
                            <% if User.exists?(chore.user_id) %>
                              <% @name = User.find(chore.user_id).first_name %>
                            <% else %>
                              <% @name = 'None' %>
                            <% end %>
                            <tr>
                              <td class="txt2"><%= chore.name %></td>
                              <td class="txt2"><%= chore.date %></td>
                              <td class="txt2"><%= @name %></td>
                              <% if Membership.search(current_user.id, params[:id]).first != nil && Membership.search(current_user.id, params[:id]).first.active == true%>
                              <td><%= link_to 'Show', chore_url(chore.id, from: group_url(@group.id)), :class => "btn btn-info btn-simple btn-xs" %></td>
                              <td><%= link_to 'Edit', edit_chore_path(chore, from: group_url(@group.id)), :class => "btn btn-info btn-simple btn-xs" %></td>
                              <td><%= link_to 'Destroy', chore_url(chore.id, from: group_url(@group.id)), :class => "btn btn-danger btn-simple btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>

                              <% end %>
                              </tr>
                            <% end %>
                            </tbody>
                          </table>
                        </div><br>

                        <div class = "choreContent">

                        </div><br>

                        <div class = "choreContent">
                          <h5>Rewards | Current Score:
                          <%=Membership.search(current_user.id, @group.id).first.chore_score %>
                          </h5>
                          <table>
                            <thead>
                              <tr>
                                <th class="txt">Reward</th>
                                <th class="txt">Cost</th>
                              </tr>
                            </thead>

                            <tbody>
                              <% @group.rewards.sort {|a,b| a.cost <=> b.cost}.each do |reward| %>
                              <% if reward.user_id == -1 %>
                                <tr>
                                  <td class="txt2"><%= reward.name %></td>
                                  <td class="txt2"><%= reward.cost%></td>
                                  <td><%= link_to 'Purchase', purchase_reward_path(reward.id, from: group_url(@group.id)), :class => "btn btn-info btn-simple btn-xs" %></td>
                                  <td><%= link_to 'Description', reward, :class => "btn btn-info btn-simple btn-xs"%></td>
                                </tr>
                                <%end%>
                              <%end%>
                            </tbody>
                          </table>

                        </div><br>
                        <% if Membership.search(current_user.id, @group.id).first != nil && Membership.search(current_user.id, @group.id).first.active == true && Membership.search(current_user.id, @group.id).first.admin == true%>
                          <%= link_to 'New Reward', new_reward_path(group_id: @group.id), :class => "btn btn-2 btn-2d" %> <br> <br>
                        <% end %>

                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
