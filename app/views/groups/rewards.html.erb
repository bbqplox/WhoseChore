<%= stylesheet_link_tag 'chores' %>
<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Bootstrap Core CSS -->
  <link href="css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link href="css/simple-sidebar.css" rel="stylesheet">

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

</head>

<body>

  <div id="wrapper">

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <p id="notice"><%= notice %></p>
            <div class = "choreContent">
              <h5>Rewards | Current Score:
                <%=Membership.search(current_user.id, @group.id).first.chore_score %>
              </h5>
              <!--Marketplace for purchasing rewards -->
              <table>
                <thead>
                  <tr>
                    <th class="txt">Reward</th>
                    <th class="txt">Cost</th>
                  </tr>
                </thead>


                <tbody>
                  <% @group.rewards.sort {|a,b| a.cost <=> b.cost}.each do |reward| %>
                  <% if reward.user_id == -1 %>
                  <tr>
                    <td class="txt2"><%= reward.name %></td>
                    <td class="txt2"><%= reward.cost%></td>
                    <td><%= link_to 'Purchase', purchase_reward_path(reward.id, from: group_url(@group.id)), :class => "btn btn-info btn-simple btn-xs" %></td>
                    <td><%= link_to 'Description', reward, :class => "btn btn-info btn-simple btn-xs"%></td>
                    <% if Membership.search(current_user.id, @group.id).first.admin %>
                      <td><%= link_to 'Edit', edit_reward_path(reward), :class => "btn btn-info btn-simple btn-xs" %></td>
                      <td><%= link_to 'Delete', reward, :class => "btn btn-danger btn-simple btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% end %>
                  </tr>
                  <%end%>
                  <%end%>
                </tbody>
              </table>


            </div><br>

            <div id="page-content-wrapper">
              <div class="container-fluid">
                <div class="row">
                  <div class="col-lg-12">
                    <div class = "choreContent">
                      <!--History of rewards -->
                      <table>
                        <thead>
                          <tr>
                            <th class="txt">Reward</th>
                            <th class="txt">Owner</th>
                          </tr>
                        </thead>


                        <tbody>
                          <% @group.rewards.sort {|a,b| a.claimed_time <=> b.claimed_time}.each do |reward| %>
                          <% if reward.user_id != -1 %>
                          <tr>
                            <td class="txt2"><%= reward.name %></td>
                            <td class="txt2"><%= User.find(reward.user_id).first_name%></td>
                            <td><%= link_to 'Description', reward, :class => "btn btn-info btn-simple btn-xs"%></td>
                          </tr>
                          <%end%>
                          <%end%>
                        </tbody>
                      </table>
                    </div><br>

            <% if Membership.search(current_user.id, @group.id).first != nil && Membership.search(current_user.id, @group.id).first.active == true && Membership.search(current_user.id, @group.id).first.admin == true%>
            <%= link_to 'New Reward', new_reward_path(group_id: @group.id), :class => "btn btn-2 btn-2d" %> <br> <br>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
</body>
</html>
