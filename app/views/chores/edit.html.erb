<%= stylesheet_link_tag 'chores' %>
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/simple-sidebar.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row choreContent">
                    <div class="col-lg-12">

<p id="notice"><%= notice %></p>

<h1 class="black">Editing Chore</h1>
<%= form_for(@chore) do |f| %>
  <% if @chore.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chore.errors.count, "error") %> prohibited this chore from being saved:</h2>

      <ul>
      <% @chore.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

  <div class="field-name">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field-desc">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

  <div class="field-score">
    <%= f.label :score %><br>
    <%= f.select :score, 1.. 10 %>
  </div>

  <div class="field-date">
    <%= f.label :date %><br>
    <%= f.select :date, Date.today.. 2.week.from_now %>
  </div>

  <% if Group.exists?(@chore.group_id)%>
    <% @admin = Membership.search(current_user.id, @chore.group_id).first.admin %>
  <% else %>
    <% @admin = false %>
  <% end %>

  <div class="field">
    <% if @admin == true %>
      <%= f.label "Person Responsible" %> <br>
      <%#@group = Group.find(@chore.group_id)%>
      <%= f.select :user_id, options_from_collection_for_select(User.active_group_users(@chore.group_id), 'id', 'first_name', f.object.user_id)%>
    <% end %>
  </div>

  <div class="field-complete">
    <%= f.label "Complete" %>
    <%= f.check_box :complete %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-2 btn-2d" %>
  </div>
  <% end %>
                        <%= link_to 'Back to Groups', group_path(@chore.group_id),:class => "btn btn-4 btn-4d icon-arrow-left color-4" %>
                        <%= link_to 'Back to Chores', chores_url,:class => "btn btn-4 btn-4d icon-arrow-left color-4" %>

                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>


</body>

</html>
