    <body>
<p id="notice"><%= notice %></p>

 <div id="wrapper">

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
<div class="jumbotron">
    <h1>Listing Rewards</h1>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class = "choreContent table-responsive padding">
<table class="table table-striped table-hover">
    
    <%= link_to 'New Reward', new_reward_path, :class => "btn btn-primary btn-lg margin-bottom" %>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cost</th>
      <th></th>
        <th></th>
        <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.name %></td>
        <td><%= reward.description %></td>
        <td><%= reward.cost %></td>
        <td><%= link_to 'Show', reward, :class => "btn btn-info btn-lg" %></td>
        <td><%= link_to 'Edit', edit_reward_path(reward), :class => "btn btn-info btn-lg" %></td>
          <td><%= link_to 'Destroy', reward, :class => "btn btn-danger btn-lg", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
        </div>

 </div>
