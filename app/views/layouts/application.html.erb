<!DOCTYPE html>
<html>
<head>
  <title>WhoseChore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="crouton">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <h3 class = "black">
                        Hello, <%= current_user.first_name %>
                    </h3>
                    </li>
                    <li>
                        <%= link_to "Main", main_path, :class => "navfont" %>
                    </li>
                    <li>
                        <%= link_to "Chores", chores_path, :class => "navfont" %>
                    </li>
                    <li>
                        <%= link_to "Groups", groups_path, :class => "navfont" %>
                    </li>
                    <li>
                        <%= link_to "Group Invites", group_invites_path, :class => "navfont" %>
                    </li>

                    <li>
                        <%= link_to "Profile", profile_path(current_user.profile.id), :class => "navfont" %>
                    </li>
                    <li>
                        <%= link_to "Log out", logout_path, method: "delete", :class => "navfont" %>
                    </li>
            </ul>
        </div>
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                </div>
            </div>
      </div>
</div>


<%= yield %>

</body>
</html>
